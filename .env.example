# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/crverse_db

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# External API Keys (Optional - for enhanced features)
AKOOL_API_KEY=your-akool-api-key-for-avatar-generation
ELEVENLABS_API_KEY=your-elevenlabs-api-key-for-voice-synthesis

# Next.js Environment Variables (for frontend)
NEXT_PUBLIC_JAVARI_APP_URL=https://javariai.com

# Application Configuration
NODE_ENV=development
PORT=5000

# Admin Configuration (Set these to enable admin features)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password

# Safety and Moderation
CONTENT_MODERATION_ENABLED=true
AGE_VERIFICATION_REQUIRED=true

# Revenue Sharing Configuration
CREATOR_REVENUE_SHARE=70
PLATFORM_REVENUE_SHARE=20
INFRASTRUCTURE_REVENUE_SHARE=10

# Emergency Controls Configuration
EMERGENCY_CONTACTS=royhenderson@craudiovizai.com,cindy@craudiovizai.com
EMERGENCY_NOTIFICATION_ENABLED=true

# Logging and Monitoring
LOG_LEVEL=info
AUDIT_LOGGING_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Notification Configuration
EMAIL_FROM=noreply@craudiovizai.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics and Tracking
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags
ONLY_AVATAR_ENABLED=true
CREATOR_MONETIZATION_ENABLED=true
EMERGENCY_CONTROLS_ENABLED=true
LIVE_AVATARS_ENABLED=true

# Development Only
DEV_MODE=true
DEBUG_LOGS=true
